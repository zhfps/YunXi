<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunxi.zhang.admin.project.features.dao.SysRoleDao">

    <resultMap type="com.yunxi.zhang.admin.project.features.entity.SysRole" id="SysRoleMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="namezh" column="nameZh" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMap">
        select
          id, nameZh, name
        from forum.sys_role
        where id = #{id}
    </select>
    <!--查询单个-->
    <select id="queryName" resultMap="SysRoleMap">
        select
          id, nameZh, name
        from forum.sys_role
        where name = #{name}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMap">
        select
          id, nameZh, name
        from forum.sys_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMap">
        select
          id, nameZh, name
        from forum.sys_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="namezh != null and namezh != ''">
                and nameZh = #{namezh}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into forum.sys_role(nameZh, name)
        values (#{namezh}, #{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update forum.sys_role
        <set>
            <if test="namezh != null and namezh != ''">
                nameZh = #{namezh},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from forum.sys_role where id = #{id}
    </delete>

</mapper>