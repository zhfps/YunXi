<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunxi.zhang.admin.project.features.dao.SysUserDao">
    <select id="findByUsername" resultType="com.yunxi.zhang.admin.project.features.entity.UserDetail">
        SELECT id, name, password from sys_user where name = #{name};
    </select>

    <insert id="insert" parameterType="com.yunxi.zhang.admin.project.features.entity.UserDetail" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user (name, password) VALUES (#{username}, #{password});
    </insert>

    <insert id="insertRole">
        insert into sys_user_role (user_id, role_id) VALUES (#{userId}, #{roleId});
    </insert>

    <select id="findRoleById" resultType="com.yunxi.zhang.admin.project.features.entity.SysRole">
      select id, name, nameZh from sys_role where id = #{roleId}
    </select>

    <select id="findRoleByUserId" resultType="com.yunxi.zhang.admin.project.features.entity.SysRole">
        select * from sys_role where id in (SELECT role_id from sys_user_role where user_id = #{userId});
    </select>

</mapper>